{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"strict": true,
		"module": "nodenext",
		"target": "ES2022",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"sourceMap": true,
		"incremental": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"allowJs": false
	},
	"include": [
		"src/**/*"
	]
}